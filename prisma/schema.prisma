generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Roles {
  ADMIN
  USER
}

enum InviteStatus {
  ACCEPTED
  PENDING
  REJECTED
}

model Organizations {
  id        String     @id @default(uuid())
  name      String
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt
  projects  Projects[]

  invites Invites[]
  users   OrganizationsOnUsers[]
}

model Users {
  id       String  @id @default(uuid())
  email    String  @unique
  fullname String
  username String  @unique
  password String
  image    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  projects      Projects[]
  sessions      RefreshTokens[]
  invites       Invites[]
  organizations OrganizationsOnUsers[]
}

model Projects {
  id             String        @id @default(uuid())
  name           String
  image          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now()) @updatedAt
  userId         String?
  user           Users?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  organizationId String
  organization   Organizations @relation(fields: [organizationId], references: [id], onDelete: Restrict)

  @@unique([organizationId, name])
  @@index([organizationId, userId])
}

model OrganizationsOnUsers {
  organizationId String
  userId         String

  role       Roles
  assignedAt DateTime @default(now())

  organization Organizations @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         Users         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

model Invites {
  id    String @id @default(uuid())
  email String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expiresAt DateTime

  status InviteStatus @default(PENDING)

  organizationId String
  organization   Organizations @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  invitedByUserId String?
  invitedBy       Users?  @relation(fields: [invitedByUserId], references: [id], onDelete: SetNull)

  @@unique([organizationId, email])
}

model RefreshTokens {
  id            String   @id @default(uuid())
  token         String   @unique
  userId        String
  user          Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  revokedAt     DateTime?
  ipAddress     String?
  userAgent     String?
  isRevoked     Boolean  @default(false)
  lastUsedAt    DateTime @default(now())

  @@index([userId, expiresAt])
  @@index([token])
}